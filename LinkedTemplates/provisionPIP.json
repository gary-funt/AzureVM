{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location to create the resource"
              }
        },
        "apiVersion": {
            "type": "string",
            "metadata": {
                "description": "API version for this resource"
              }
        },
        "name": {
            "type": "string",
            "metadata": {
                "description": "Name of the resource"
              }
        },
        "publicIpAllocationType": {
            "type": "string",
            "metadata": {
                "description": "Whether IP is Static or Dynamic"
              }
        },
        "sku": {
            "type": "string",
            "defaultValue": "Standard",
            "metadata": {
                "description": "SKU of Public IP to create"
              }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "Tags to attach to resource"
              }
          }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('name')]",
            "apiVersion": "[parameters('apiVersion')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "[parameters('sku')]"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "[parameters('publicIpAllocationType')]",
                "idleTimeoutInMinutes": 4
            },
            "dependsOn": []
        }
    ],
    "outputs": {
        "resourceID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('name'))]"
        }
    }
}