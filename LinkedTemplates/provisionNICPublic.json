{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for the deployment"
              }
          },
          "tags": {
            "type": "object",
            "metadata": {
                "description": "Tags to attach to resource"
              }
          },
          "pipId": {
            "type": "string",
            "metadata": {
                "description": "Resource ID of PIP object"
              }
          },
          "nicName": {
            "type": "string",
            "metadata": {
                "description": "Name of NIC object"
              }
          },
          "networkApiVersion": {
            "type": "string",
            "metadata": {
                "description": "API version for this resource"
              }
          },
          "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "VNet name where NIC will reside"
              }
          },
          "virtualNetworkRGName": {
            "type": "string",
            "metadata": {
                "description": "Resource Group of VNet"
              }
          },
          "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Subnet name where NIC will reside"
              }
          },
          "privateIpAddress": {
            "type": "string",
            "metadata": {
                "description": "IP address of server"
              }
          },
          "privateIpAllocationType": {
            "type": "string",
            "metadata": {
                "description": "Whether IP should be set statically or dynamically"
              }
          },
          "enableAcceleratedNetworking": {
            "type": "string",
            "metadata": {
                "description": "Whether the NIC should have Accelerated Networking enabled"
              }
          },
          "networkSecurityGroup": {
            "type": "string",
            "metadata": {
                "description": "Name of an NSG to attach to the NIC"
              }
          },
          "joinLoadBalancer": {
              "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "No",
            "type": "string",
            "metadata": {
                "description": "Whether the NIC should belong to a Load Balancer Backend Pool. Default is No."
            }
          },
          "loadBalancerName": {
            "type": "string",
            "metadata": {
                "description": "Name of an Azure Load Balancer to attach to the NIC"
              }
          },
          "loadBalancerBackendPoolName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Backend Pool of the Load Balancer to join"
              }
          }
    },
    "variables": {
        "vnetID": "[resourceId(parameters('virtualNetworkRGName'), 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetID'),'/subnets/', parameters('subnetName'))]",
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('networkSecurityGroup'))]"
        },
        "loadBalancerBackendAddressPools": [
          {
            "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('loadBalancerName')), '/backendAddressPools/',parameters('loadBalancerBackendPoolName'))]"
          }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[parameters('nicName')]",
            "apiVersion": "[parameters('networkApiVersion')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
              "ipConfigurations": [
                  {
                      "name": "ipconfig1",
                      "properties": {
                          "privateIPAllocationMethod": "[parameters('privateIpAllocationType')]",
                          "privateIpAddress": "[if(equals(parameters('privateIpAllocationType'),'Static'), parameters('privateIpAddress'), json('null'))]",
                          "subnet": {
                              "id": "[variables('subnetRef')]"
                          },
                          "publicIPAddress": {
                            "id": "[parameters('pipId')]"
                          },
                          "primary": true,
                          "loadBalancerBackendAddressPools": "[if(equals(parameters('joinLoadBalancer'),'Yes'), variables('loadBalancerBackendAddressPools'), json('null'))]"
                      }
                  }
              ],
              "networkSecurityGroup": "[if(empty(parameters('networkSecurityGroup')), json('null'),variables('networkSecurityGroup'))]",
              "enableAcceleratedNetworking": "[parameters('enableAcceleratedNetworking')]",
              "enableIPForwarding": false,
              "primary": true
            }
          }
    ],
    "outputs": {
        "resourceID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicName'))]"
        }
    }
}
